{{#if params}}
  const paramsSchema = {{json params}};

  function isParams(obj: unknown): obj is {{capitalize name}}Params {
    const isValid = ajv.validate(paramsSchema, obj);

    return !!isValid;
  }

  if (!isParams(params)) {
    throw new RequestValidationError({
      message: 'Request params schema validation error',
      method: '{{name}}',
      element: 'params',
    });
  }

  type {{capitalize name}}ParamsKeys = keyof {{capitalize name}}Params;

  const paramsKeys = Object.keys(params) as {{capitalize name}}ParamsKeys[];

  if (paramsKeys.length) {
    paramsKeys.forEach((param) => {
      requestUrl = requestUrl.replace(`{${param}}`, encodeURIComponent(String(params[param])));
    });
  }
{{/if}}
