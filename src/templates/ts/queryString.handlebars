{{#if query}}
  const querySchema = {{json query}};

  function isQuery(obj: unknown): obj is {{capitalize name}}Query {
    const isValid = ajv.validate(querySchema, obj);

    return !!isValid;
  }

  if (!isQuery(query)) {
    const error = new Error('Query string schema validation error');
    throw error;
  }


  if (Object.keys(query)) {
    requestUrl = `${requestUrl}?${stringify(query, { arrayFormat: 'bracket' })}`;
  }
{{/if}}
